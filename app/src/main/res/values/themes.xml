<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Practice_musicPlayer" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Practice_musicPlayer" parent="Base.Theme.Practice_musicPlayer" />

    <style name="Theme.Music.Font" parent="Base.Theme.Practice_musicPlayer">
        <item name="background">@color/white</item>
        <item name="android:textColor">@color/onWhite</item>
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="Base.Theme.Practice_musicPlayer.Single">
        <item name="android:textColor">@color/blue</item>
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="Base.Theme.Practice_musicPlayer.playlist">
        <item name="android:background">@color/orange</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Base.Theme.Practice_musicPlayer.fragment">
        <item name="android:background">@color/fragmentBG</item>
        <item name="android:textColor">@color/surfaceColor</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Base.Theme.Practice_musicPlayer.FontInterface">
        <item name="android:textColor">@color/blue</item>
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Base.Theme.Practice_musicPlayer.FontColor">
        <item name="android:textColor">@color/lightBlue</item>
    </style>

    <style name="roundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="Base.Theme.Practice_musicPlayer.progressBar">
        <item name="android:progressBackgroundTint">@color/black</item>
        <item name="android:progressTint">@color/blue</item>
        <item name="android:thumbTint">@color/blue</item>
    </style>

    <style name="Base.Theme.Practice_musicPlayer.IconFillColor">
        <item name="tint">@color/blue</item>
    </style>

    <style name="Base.Theme.Practice_musicPlayer.IconFillColorTransparent">
        <item name="tint">#CB0B0B0B</item>
    </style>

    <style name="Base.Theme.Practice_musicPlayer.IconFillColor1">
        <item name="tint">@color/green</item>
    </style>


    <style name="Base.Theme.Practice_musicPlayer.FontColorDetails">
        <item name="android:textColor">@color/blue</item>
    </style>


</resources>